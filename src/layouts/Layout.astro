---
import "../styles/global.css";
import bg from "../assets/bg.svg";

export interface Props {
	title: string;
	description?: string;
}

const {
	title = "",
	description = "Cultura Viva con Amalia Grandett - Descubre la riqueza cultural de nuestra región",
} = Astro.props;
