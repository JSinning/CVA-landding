---
import "../styles/global.css";
import bg from "../assets/bg.svg";

export interface Props {
	title: string;
	description?: string;
}

const {
	title = "",
	description = "Cultura Viva con Amalia Grandett - Descubre la riqueza cultural de nuestra regi√≥n",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<!-- <meta name="viewport" content="width=device-width" /> -->
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" />  -->
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<title>{title}</title>
		<title>Cultura viva con Amalia Grandette</title>
	</head>

	<body
		class="min-h-screen gradient-bg relative overflow-x-hidden bg-center bg-cover"
		style={`background-image: url(${bg.src});`}
	>
		<!-- Decorative Background Elements -->
		<div class="absolute top-10 left-10 w-32 h-32 opacity-20">
			<svg viewBox="0 0 100 100" class="w-full h-full text-primary">
				<circle
					cx="50"
					cy="50"
					r="20"
					fill="none"
					stroke="currentColor"
					stroke-width="2"></circle>
				<path
					d="M30,50 Q50,30 70,50 Q50,70 30,50"
					fill="currentColor"
					opacity="0.3"></path>
			</svg>
		</div>

		<div
			class="absolute top-20 right-20 w-24 h-24 opacity-0 floating-icon"
		>
			<svg viewBox="0 0 100 100" class="w-full h-full text-accent">
				<rect
					x="20"
					y="30"
					width="60"
					height="40"
					rx="5"
					fill="none"
					stroke="currentColor"
					stroke-width="3"></rect>
				<path
					d="M30,20 L70,20 Q75,20 75,25 L75,35"
					fill="none"
					stroke="currentColor"
					stroke-width="2"></path>
				<circle cx="40" cy="50" r="5" fill="currentColor"></circle>
				<circle cx="60" cy="50" r="5" fill="currentColor"></circle>
			</svg>
		</div>

		<div class="absolute bottom-10 left-20 w-20 h-20 opacity-0">
			<svg viewBox="0 0 100 100" class="w-full h-full text-secondary">
				<path
					d="M20,80 Q20,20 50,20 Q80,20 80,50 Q80,80 50,80 Q20,80 20,50"
					fill="none"
					stroke="currentColor"
					stroke-width="3"></path>
			</svg>
		</div>

		<!-- Main Content Container -->
		<div class="container mx-auto px-4 py-8 relative z-10">
			<!-- Content Slot -->
			<slot />
		</div>
	</body>

</html>
