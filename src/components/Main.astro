---
import Exploration from "./Exploration.astro";
---

<Exploration />

<!-- Cultural Icons Row -->
<section
	class="flex justify-center items-center gap-4 md:gap-6 mb-12 flex-wrap"
	aria-label="Iconos culturales"
>
	<!-- Eye Icon - Artes Visuales -->
	<div
		class="cultural-icon glass-effect rounded-2xl p-4 w-16 h-16 md:w-20 md:h-20 flex items-center justify-center"
		title="Artes Visuales"
	>
		<svg
			class="w-8 h-8 md:w-10 md:h-10 text-white"
			viewBox="0 0 24 24"
			fill="currentColor"
			aria-hidden="true"
		>
			<path
				d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
			></path>
		</svg>
	</div>

	<!-- Music Icon -->
	<div
		class="cultural-icon glass-effect rounded-2xl p-4 w-16 h-16 md:w-20 md:h-20 flex items-center justify-center"
		title="Música"
	>
		<svg
			class="w-8 h-8 md:w-10 md:h-10 text-primary"
			viewBox="0 0 24 24"
			fill="currentColor"
			aria-hidden="true"
		>
			<path
				d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"
			></path>
		</svg>
	</div>

	<!-- Dance Icon -->
	<div
		class="cultural-icon glass-effect rounded-2xl p-4 w-16 h-16 md:w-20 md:h-20 flex items-center justify-center"
		title="Danza"
	>
		<svg
			class="w-8 h-8 md:w-10 md:h-10 text-pink-400"
			viewBox="0 0 24 24"
			fill="currentColor"
			aria-hidden="true"
		>
			<path
				d="M9 2c0 1.1.9 2 2 2s2-.9 2-2-.9-2-2-2-2 .9-2 2zm7 16h-2c0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.2 1.8-4 4-4s4 1.8 4 4zm-4-7c-1.1 0-2-.9-2-2V7h4v2c0 1.1-.9 2-2 2z"
			></path>
		</svg>
	</div>

	<!-- Art Icon -->
	<div
		class="cultural-icon glass-effect rounded-2xl p-4 w-16 h-16 md:w-20 md:h-20 flex items-center justify-center"
		title="Arte"
	>
		<svg
			class="w-8 h-8 md:w-10 md:h-10 text-accent"
			viewBox="0 0 24 24"
			fill="currentColor"
			aria-hidden="true"
		>
			<path
				d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
			></path>
		</svg>
	</div>

	<!-- Theater Icon -->
	<div
		class="cultural-icon glass-effect rounded-2xl p-4 w-16 h-16 md:w-20 md:h-20 flex items-center justify-center"
		title="Teatro"
	>
		<svg
			class="w-8 h-8 md:w-10 md:h-10 text-secondary"
			viewBox="0 0 24 24"
			fill="currentColor"
			aria-hidden="true"
		>
			<path
				d="M6.5 9H2v8h4.5V9zM22 9h-4.5v8H22V9zM9 5v14h6V5H9zm2 2h2v2h-2V7zm0 4h2v2h-2v-2zm0 4h2v2h-2v-2z"
			></path>
		</svg>
	</div>

	<!-- History Icon -->
	<div
		class="cultural-icon glass-effect rounded-2xl p-4 w-16 h-16 md:w-20 md:h-20 flex items-center justify-center"
		title="Historia"
	>
		<svg
			class="w-8 h-8 md:w-10 md:h-10 text-green-400"
			viewBox="0 0 24 24"
			fill="currentColor"
			aria-hidden="true"
		>
			<path
				d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"
			></path>
		</svg>
	</div>
</section>

<section
	class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8 mb-12"
	aria-label="Videos destacados"
>
	<!-- Video 1 - Artistic Performance -->
	<article class="video-overlay" data-video="performance">
		<img
			src="https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?w=600&h=400&fit=crop&crop=center"
			alt="Performance artística con música y danza tradicional"
			class="w-full h-64 md:h-80 object-cover rounded-2xl"
		/>
		<button
			class="play-button"
			aria-label="Reproducir video de performance artística"
		>
			<svg
				class="w-8 h-8 text-primary ml-1"
				viewBox="0 0 24 24"
				fill="currentColor"
				aria-hidden="true"
			>
				<path d="M8 5v14l11-7z"></path>
			</svg>
		</button>
	</article>

	<!-- Video 2 - Cultural Festival -->
	<article class="video-overlay" data-video="festival">
		<img
			src="https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?w=600&h=400&fit=crop&crop=center"
			alt="Festival cultural con trajes típicos y celebraciones comunitarias"
			class="w-full h-64 md:h-80 object-cover rounded-2xl"
		/>
		<button
			class="play-button"
			aria-label="Reproducir video de festival cultural"
		>
			<svg
				class="w-8 h-8 text-primary ml-1"
				viewBox="0 0 24 24"
				fill="currentColor"
				aria-hidden="true"
			>
				<path d="M8 5v14l11-7z"></path>
			</svg>
		</button>
	</article>
</section>

